# --- CodeIgniter on LiteSpeed/Apache ---
Options -Indexes -MultiViews

RewriteEngine On
RewriteBase /

# Block direct access to system/application folders (optional safety)
RewriteRule ^(system|application) - [F,L,NC]

# Send everything that's not a real file/dir to index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php?/$1 [L,QSA]